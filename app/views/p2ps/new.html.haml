.content-block
  .content-header.page-title
    %h1 Добавить
  .content-body
    = form_with model: @p2p, local: true, html: { class: 'form-box', multipart: true } do |f|
      .form-group
        = f.label :p2p_type, 'Тип сделки'
        = f.select :p2p_type, options_for_select([['Покупка', 0], ['Продажа', 1]], 0), {}, class: 'form-input', required: true
      .form-group.p2p-form-buy
        = f.label :order_id, 'Ордер ID'
        = f.number_field :order_id, class: 'form-input', required: false
      .form-group.p2p-form-sell{ style: "display: none;" }
        = f.label :order_id, 'Ордер ID'
        -# = f.select :order_id, options_for_select(P2p.get_not_sold_orders.map { |c| [c, c] }), {}, prompt: 'Выберите банк', class: 'form-input', required: false
      .form-group
        = f.label :rub_per_usd, 'Курс (₽ / $)'
        = f.number_field :rub_per_usd, step: 0.01, class: 'form-input', required: true
      .form-group
        = f.label :order_sum, 'Сумма заказа (₽)'
        = f.number_field :order_sum, step: 0.01, class: 'form-input', required: true
      .form-group
        = f.label :usdt_count, 'Кол-во USDT'
        = f.number_field :usdt_count, step: 0.01, class: 'form-input', required: true
      .form-group
        = f.label :comission_rub, 'Комиссия банка (₽)'
        = f.number_field :comission_rub, step: 0.01, class: 'form-input', required: false
      .form-group
        = f.label :order_date, 'Дата'
        = f.text_field :order_date, class: 'form-input'
      .form-group
        = f.label :bank_id, 'Банк'
        = f.select :bank_id, options_for_select(Bank::BANKS.map { |c| [tgm("bank_#{c}"), c] }), {}, prompt: 'Выберите банк', class: 'form-input', required: true
      .form-group.box
        %label
          Файлы
          %a#add-file-link{ href: '#', style: 'margin-left: 10px; font-size: 0.9em;' }
            = g_icon("add")

        #files-container
          - @p2p.p2p_files.each_with_index do |ff, i|
            .file-upload
              = text_field_tag "p2p_files[#{i}][file_name]", ff.file_name, class: 'form-input', placeholder: 'Название файла'
              = file_field_tag "p2p_files[#{i}][file]", class: 'form-input'


      .form-actions
        = link_to 'Отмена', p2ps_path, class: 'btn'
        = f.submit 'Сохранить', class: 'btn'
