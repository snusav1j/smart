.content-block
  .content-header
    %h1 Вход
  .content-body
    = form_with url: session_path(:user), scope: :user, local: true, html: { class: 'form-box' } do |f|
      .form-group
        = f.label :email, 'Email'
        = f.email_field :email, class: 'form-input', required: true
      .form-group
        = f.label :password, 'Пароль'
        = f.password_field :password, class: 'form-input', required: true
      .form-group.inline
        = f.check_box :remember_me
        = f.label :remember_me, 'Запомнить меня'
      .form-actions
        = link_to 'Регистрация', signup_path, class: 'btn'
        = f.submit 'Войти', class: 'btn btn-primary'
